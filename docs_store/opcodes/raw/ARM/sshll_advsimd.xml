          <pstext mayhavelinks="1" section="Decode" rep_section="decode">if immh == '0000' then SEE(asimdimm);
if immh&lt;3&gt; == '1' then UNDEFINED;

constant integer d = <a link="impl-shared.UInt.1" file="shared_pseudocode.xml" hover="function: integer UInt(bits(N) x)">UInt</a>(Rd);
constant integer n = <a link="impl-shared.UInt.1" file="shared_pseudocode.xml" hover="function: integer UInt(bits(N) x)">UInt</a>(Rn);
constant integer esize = 8 &lt;&lt; <a link="impl-shared.HighestSetBitNZ.1" file="shared_pseudocode.xml" hover="function: integer HighestSetBitNZ(bits(N) x)">HighestSetBitNZ</a>(immh&lt;2:0&gt;);
constant integer datasize = 64;
constant integer part = <a link="impl-shared.UInt.1" file="shared_pseudocode.xml" hover="function: integer UInt(bits(N) x)">UInt</a>(Q);
constant integer elements = datasize DIV esize;

constant integer shift = <a link="impl-shared.UInt.1" file="shared_pseudocode.xml" hover="function: integer UInt(bits(N) x)">UInt</a>(immh:immb) - esize;
constant boolean unsigned = FALSE;</pstext></ps>
