        <docvars>
          <docvar key="isa" value="A64"/>
          <docvar key="mnemonic" value="SHA1M"/>
          <docvar key="instr-class" value="advsimd"/>
        </docvars>
        <asmtemplate><text>SHA1M  </text><a hover="Is the 128-bit name of the SIMD&amp;amp;FP source and destination, encoded in the &quot;Rd&quot; field." link="Qd">&lt;Qd&gt;</a><text>, </text><a hover="Is the 32-bit name of the second SIMD&amp;amp;FP source register, encoded in the &quot;Rn&quot; field." link="Sn__2">&lt;Sn&gt;</a><text>, </text><a hover="Is the name of the third SIMD&amp;amp;FP source register, encoded in the &quot;Rm&quot; field." link="Vm__7">&lt;Vm&gt;</a><text>.4S</text></asmtemplate>
      </encoding>
      <ps_section howmany="1">
        <ps name="A64.simd_dp.cryptosha3.SHA1M_QSV_cryptosha3" sections="1" secttype="noheading">
          <pstext mayhavelinks="1" section="Decode" rep_section="decode">if !IsFeatureImplemented(FEAT_SHA1) then UNDEFINED;
constant integer d = <a link="impl-shared.UInt.1" file="shared_pseudocode.xml" hover="function: integer UInt(bits(N) x)">UInt</a>(Rd);
constant integer n = <a link="impl-shared.UInt.1" file="shared_pseudocode.xml" hover="function: integer UInt(bits(N) x)">UInt</a>(Rn);
constant integer m = <a link="impl-shared.UInt.1" file="shared_pseudocode.xml" hover="function: integer UInt(bits(N) x)">UInt</a>(Rm);</pstext></ps>
