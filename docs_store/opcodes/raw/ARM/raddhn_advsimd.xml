<instructionsection id="RADDHN_advsimd" title="RADDHN, RADDHN2 -- A64" type="instruction">
  <docvars>
    <docvar key="advsimd-reguse" value="3reg-diff"/>
    <docvar key="advsimd-type" value="simd"/>
    <docvar key="instr-class" value="advsimd"/>
